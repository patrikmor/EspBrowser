<UserControl x:Class="EspBrowser.Views.SimplePieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EspBrowser.Views"
             mc:Ignorable="d">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type local:SimplePieChart}">
            <Image x:Name="PART_PieChart" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
